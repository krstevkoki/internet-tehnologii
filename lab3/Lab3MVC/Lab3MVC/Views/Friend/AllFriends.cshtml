@model List<Lab3MVC.Models.FriendModel>
@{
    ViewBag.Title = "AllFriends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All friends:</h2>
@{
    if (Model.Count == 0)
    {
        <div class="alert-warning" style="width: 20%; padding: 2%">
            <small style="color: red; font-weight: bolder">You have no friends</small>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>Friend ID</th>
                    <th style="width: 50%">Friend Name</th>
                    <th>Friend Place</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @{
                    int i = 0;
                    foreach (var m in Model)
                    {
                        m.ID = i++;
                        <tr>
                            <td>
                                @m.FriendID
                            </td>
                            <td>
                                @m.Name
                            </td>
                            <td>
                                @m.Hometown
                            </td>
                            <td style="width: 10%">
                                @Html.ActionLink("Edit", "EditFriend",
                                    new {id = m.ID}, new {@class = "btn btn-default", style = "width: 90%; margin-bottom: 5px"})

                                @Html.ActionLink("Delete", "DeleteFriend",
                                    new {id = m.ID}, new {@class = "btn btn-default", style = "width: 90%; margin-bottom: 5px"})
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    }
}